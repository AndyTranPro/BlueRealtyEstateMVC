@page
@model RealEstateApplication.Pages.HomeDetailModel
@{
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<a class="btn btn-outline-dark mt-3 mb-3" asp-page="/Index">Back to Home List</a>

<h2>Update Home Details</h2>

<form class="pb-3" method="post" asp-page-handler="Update" id="updateHomeForm">
    <div class="form-group pb-3">
        <label asp-for="Home.Price"></label>
        <input asp-for="Home.Price" class="form-control w-25" />
        <span asp-validation-for="Home.Price" class="text-danger"></span>
    </div>
    <div class="form-group pb-3">
        <label asp-for="Home.Address"></label>
        <input asp-for="Home.Address" class="form-control w-50" />
        <span asp-validation-for="Home.Address" class="text-danger"></span>
    </div>
    <div class="form-group pb-3">
        <label asp-for="Home.Area"></label>
        <input asp-for="Home.Area" class="form-control w-25" />
        <span asp-validation-for="Home.Area" class="text-danger"></span>
    </div>
    <input asp-for="Home.Id" type="hidden" />
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<button type="button" class="btn btn-danger" onclick="showConfirmation()">Delete</button>

<div id="deleteConfirmation" style="display:none;">
    <p>Are you sure you want to delete this record?</p>
    <button class="btn btn-danger" onclick="deleteHome(@Model.Home.Id)">Confirm Delete</button>
    <button class="btn btn-primary" onclick="closeConfirmation()">Cancel</button>
</div>

