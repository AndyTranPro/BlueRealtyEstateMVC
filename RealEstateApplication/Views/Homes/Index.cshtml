@using RealEstateApplication.Models
@model HomesViewModel

<div class="filter-section mt-3">
    <form asp-controller="Homes" asp-action="Index" method="get">
        <div class="row">
            <div class="col-md-3">
                <input type="number" class="form-control mb-2" id="minPrice" name="minPrice" placeholder="Min Price" value="@Model.MinPrice">
            </div>
            <div class="col-md-3">
                <input type="number" class="form-control mb-2" id="maxPrice" name="maxPrice" placeholder="Max Price" value="@Model.MaxPrice">
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                    <input type="number" class="form-control mb-2" id="minArea" name="minArea" placeholder="Min Area (m²)" value="@Model.MinArea">
            </div>
            <div class="col-md-3">
                    <input type="number" class="form-control mb-2" id="maxArea" name="maxArea" placeholder="Max Area (m²)" value="@Model.MaxArea">
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary">Filter</button>
                <a asp-controller="Homes" asp-action="ClearFilters" class="btn btn-secondary ml-2">Clear Filters</a>
            </div>
        </div>
    </form>
</div>

<div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <a class="btn btn-success mt-3 mb-3" asp-controller="Homes" asp-action="AddHomeView">Add Home</a>

    <h2>List of Homes</h2>

    @if (Model.Homes != null && Model.Homes.Count > 0)
    {
        <div class="row g-4">
            @foreach (var home in Model.Homes)
            {
                <div class="col-lg-4 col-md-6 col-sm-1">
                    <div class="card">
                        <img src="@(!string.IsNullOrEmpty(home.ImageUrl) ? home.ImageUrl : 
                        "../Images/house_default.jpg")" class="card-img-top" alt="Home image">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title">@home.Address</h5>
                                <p class="home-area">@($"{home.Area}") m<sup>2</sup></p>
                            </div>
                            <p class="home-price">@($"${home.Price}")</p>
                            <a asp-controller="Homes" asp-action="HomeDetailView" asp-route-id="@home.Id" class="btn btn-outline-secondary btn-block">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No homes available.</p>
    }
</div>

