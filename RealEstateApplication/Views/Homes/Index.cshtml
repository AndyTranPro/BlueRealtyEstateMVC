@using RealEstateApplication.Models
@model HomesViewModel

<partial name="_FilterSection" model="Model" />

<div>
    <partial name="_AlertMessages" model="Model" />

    <a class="btn btn-success mt-3 mb-3" asp-controller="Homes" asp-action="AddHomeView">Add Home</a>

    <h2>List of Homes</h2>

    @if (Model.Homes != null && Model.Homes.Count > 0)
    {
        <div class="row g-4">
            @foreach (var home in Model.Homes)
            {
                <div class="col-lg-4 col-md-6 col-sm-1">
                    <div class="card">
                        <img src="@(!string.IsNullOrEmpty(home.ImageUrl) ? home.ImageUrl : 
                        "../Images/house_default.jpg")" class="card-img-top" alt="Home image">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between">
                                <h5 class="card-title">@home.Address</h5>
                                <p class="home-area">@($"{home.Area}") m<sup>2</sup></p>
                            </div>
                            <p class="home-price">@($"${home.Price}")</p>
                            <a asp-controller="Homes" asp-action="HomeDetailView" asp-route-id="@home.Id" class="btn btn-outline-secondary btn-block">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>No homes available.</p>
    }
</div>

